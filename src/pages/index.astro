---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/sections/Hero.astro";
import AnimatedText from "@/components/ui/AnimatedText.astro";
import homeData from "@/content/pages/home.json";

const { heroImage, heroTextFr, heroSubtitle } = homeData;
---

<Layout
  title="Agro Tasting Challenge"
  description="L'Agro Tasting Challenge (ATC) est un concours de dégustation international organisé chaque année depuis 2015 par l'Association Œnologique d'AgroParisTech."
  keywords="Agro Tasting Challenge, ATC, dégustation, vin, éditions"
>
  <Hero
    heroImage={heroImage}
    heroSubtitle={heroSubtitle}
    title="Agro Tasting Challenge"
    buttonPrimaryText="Voir les éditions"
    buttonPrimaryUrl="/editions"
    buttonSecondaryText="Découvrir l'ATC"
    buttonSecondaryUrl="/atc"
  />

  {/* Description Section Below Hero */}
  {heroTextFr && (
    <div class="site-container mx-auto px-4 py-12 md:py-16">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <AnimatedText
            content={heroTextFr}
            delay={0.2}
            duration={0.6}
            stagger={0.01}
            class="text-base md:text-lg leading-relaxed text-neutral-700 dark:text-neutral-300 text-center md:text-left"
          />
        </div>
      </div>
    </div>
  )}
</Layout>
