---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/sections/Hero.astro";
import AnimatedText from "@/components/ui/AnimatedText.astro";
import homeData from "@/content/pages/home.json";

const { heroImage, heroTextEn, heroSubtitleEn } = homeData;
---

<Layout
  title="Agro Tasting Challenge"
  description="The Agro Tasting Challenge (ATC) is an international tasting competition organized annually since 2015 by the Å’nological Association of AgroParisTech."
  keywords="Agro Tasting Challenge, ATC, tasting, wine, editions"
>
  <Hero
    heroImage={heroImage}
    heroSubtitle={heroSubtitleEn}
    title="Agro Tasting Challenge"
    buttonPrimaryText="View editions"
    buttonPrimaryUrl="/en/editions"
    buttonSecondaryText="Discover ATC"
    buttonSecondaryUrl="/en/atc"
  />

  {/* Description Section Below Hero */}
  {heroTextEn && (
    <div class="site-container mx-auto px-4 py-12 md:py-16">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <AnimatedText
            content={heroTextEn}
            delay={0.2}
            duration={0.6}
            stagger={0.01}
            class="text-base md:text-lg leading-relaxed text-neutral-700 dark:text-neutral-300 text-center md:text-left"
          />
        </div>
      </div>
    </div>
  )}
</Layout>
