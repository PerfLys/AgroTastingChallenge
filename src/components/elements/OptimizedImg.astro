---
import { generateWebpUrl } from "@/utils/generatedWebp";

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  class?: string;
  loading?: "eager" | "lazy";
  decoding?: "async" | "sync" | "auto";
  fetchpriority?: "high" | "low" | "auto";
  sizes?: string;
  fit?: "cover" | "contain";
  quality?: number;
  /**
   * Optional: disable 2x generation (useful for huge images / bandwidth).
   */
  generate2x?: boolean;
}

const {
  src,
  alt,
  width,
  height,
  class: className,
  loading = "lazy",
  decoding = "async",
  fetchpriority,
  sizes,
  fit = "contain",
  quality = 70,
  generate2x = true,
} = Astro.props;

const webp1x = await generateWebpUrl(src, {
  width,
  height,
  fit,
  quality,
  variant: "1x",
});
const webp2x = generate2x
  ? await generateWebpUrl(src, {
      width: width * 2,
      height: height * 2,
      fit,
      quality,
      variant: "2x",
    })
  : null;
---

<img
  src={webp1x}
  srcset={webp2x ? `${webp1x} 1x, ${webp2x} 2x` : undefined}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  decoding={decoding}
  fetchpriority={fetchpriority}
  sizes={sizes}
/>


