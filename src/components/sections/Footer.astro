---
import Logo from "@/components/ui/Logo.astro";
import ToTop from "@/components/widgets/ToTop.astro";
import { siteConfig, socialLinks as fallbackSocialLinks } from "@/config/site.js";
import footerSettings from "@/content/settings/footer.json";

type FooterSocialLink = {
  platform?:
    | "email"
    | "instagram"
    | "linkedin"
    | "facebook"
    | "x"
    | "github"
    | "youtube";
  label?: string;
  url: string;
};

const socialLinks: FooterSocialLink[] =
  (footerSettings as any)?.socialLinks?.length
    ? (footerSettings as any).socialLinks
    : (fallbackSocialLinks as any);

