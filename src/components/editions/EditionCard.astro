---
interface Props {
  year: number;
  href: string;
  description?: string;
  coverImage?: string;
}

const { year, href, description, coverImage } = Astro.props;
---

<a
  href={href}
  class="group rounded-2xl border border-primary/20 hover:border-primary/35 bg-bg-secondary/60 dark:bg-bg-secondary/10 overflow-hidden transition-colors"
>
  {coverImage ? (
    <img
      src={coverImage}
      alt={`Couverture Ã©dition ${year}`}
      class="w-full aspect-[16/9] object-cover group-hover:scale-[1.02] transition-transform duration-300"
      loading="lazy"
    />
  ) : (
    <div class="w-full aspect-[16/9] bg-gradient-to-b from-white/40 to-white/10 dark:from-neutral-900/40 dark:to-neutral-900/10" />
  )}

  <div class="p-5">
    <div class="font-medium text-neutral-800 dark:text-neutral-100">
      {year}
    </div>
    <div class="mt-1 text-xs text-neutral-600 dark:text-neutral-400">
      {description || "Galerie + PDFs"}
    </div>
  </div>
</a>


