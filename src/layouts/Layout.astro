---
import Meta from "./Meta.astro";
import Footer from "@/components/sections/Footer.astro";
import Header from "@/components/sections/Header.astro";
import TrackGa from "@/components/widgets/TrackGa.astro";
interface Props {
    title?: string | undefined;
    description?: string | undefined;
    keywords?: string | undefined;
}

const { title, description, keywords } = Astro.props;

const pathname = Astro.url?.pathname ?? "/";
const lang = pathname === "/en" || pathname.startsWith("/en/") ? "en" : "fr";

import "../styles/global.css";
import "aos/dist/aos.css";
import "../styles/aos-custom.css";
---

<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <Meta title={title} description={description} keywords={keywords} />
        <TrackGa />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" type="image/png" href="/favicon.png" />
    </head>
    <body
        class="antialiased bg-bg-primary dark:bg-bg-primary-dark max-w-full overflow-x-hidden"
    >
        <Header />
        <slot />
        <Footer />
        <script src="../assets/js/main.js"></script>
    </body>
</html>
